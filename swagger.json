{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "description": "API for Ecommerce Application",
        "title": "E-commerce Api"
    },
    "host": "localhost:3500",
    "schemes": [
        "http"
    ],
    "securityDefinitions": {
        "jwt": {
            "in": "header",
            "name": "Authorization",
            "type": "apiKey"
        }
    },
    "paths": {
        "/api/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Products",
                "description": "to get all product list",
                "security": [
                    {
                        "jwt": {}
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/api/users/signin": {
            "post": {
                "summary": "login",
                "tags": [
                    "Users"
                ],
                "description": "User login to get token",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User Credentials",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "email",
                                "password"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok"
                    },
                    "400": {
                        "description": "Invalid Credentials"
                    }
                }
            }
        }
    }
}